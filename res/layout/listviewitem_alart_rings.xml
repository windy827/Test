<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip" >

        <TextView
            android:id="@+id/tv_listviewitem_rings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/include11"
            android:ellipsize="marquee"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/gray99_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_listviewitem_ringsInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="03s"
            android:textColor="@color/gray99_color"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_listviewitem_rings1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
        android:background="@drawable/listen_selector"
       
     />

        <include
            android:id="@+id/include11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="2dip"
            android:layout_toLeftOf="@+id/iv_listviewitem_rings1"
            layout="@layout/model_diver_ver_whitebg"
          />
    </RelativeLayout>

</LinearLayout>