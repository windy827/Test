<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     
        android:layout_weight="2" >

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@anim/search_device_wait_anim"
            android:contentDescription="@string/ImgDescript"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_activity_searchdevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/redColor"
            android:textSize="@dimen/LargeSize_60" />

    </RelativeLayout>

<TextView
    android:id="@+id/tv_item_terminal_child_devicename"
    style="@style/grayTextView_larger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:gravity="center"
    android:text="@string/searchDevices_alaret"
    android:textColor="@color/gray99_color" />

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_searchtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:layout_margin="10dip" >

            <TextView
                android:id="@+id/tv_listitem_activity_webmusicfirst_time"
                style="@style/grayTextView_larger"
                android:text="搜索结果:"
                android:layout_marginLeft="20dip"
                android:textColor="@color/gray66_color" />

            <TextView
                android:id="@+id/tv_activity_searchdevices_result"
                style="@style/grayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_listitem_activity_webmusicfirst_time"
               
               android:layout_marginLeft="80dip"
                
                android:text="无"
                android:textColor="@color/gray99_color" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:focusable="false"
         >
    <Button
        android:id="@+id/bt_activity_search_devices_end"
        style="@style/buttonOfBottom"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:text="终止搜索" />
</RelativeLayout>
</LinearLayout>