<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/include111"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_mainmenu_aboutus_brife"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/listitem_selector" >

                <ImageView
                    android:id="@+id/iv_model_playing_like"
                     style="@style/mainmenu_iv_detail" />

                <TextView
                    android:id="@+id/tv_item_terminal_child_devicename"
                    style="@style/mainmenu_textLittleName"
                    
                    android:text="@string/mainmene_brife" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    layout="@layout/model_diver_hor_whitebg" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mainmenu_aboutus_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/listitem_selector"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_listitem_alart_top_incident"
                    style="@style/mainmenu_textLittleName"
                   
                    android:text="@string/mainmene_help" />

                <ImageView
                    android:id="@+id/iv_model_player_sound"
                    style="@style/mainmenu_iv_detail" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    layout="@layout/model_diver_hor_whitebg" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mainmenu_aboutus_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/listitem_selector"
                 >

                <ImageView
                    android:id="@+id/iv_listitem_alart_skip"
                    style="@style/mainmenu_iv_detail" />

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/mainmenu_textLittleName"
                    
                    android:text="@string/mainmene_more" />

            </RelativeLayout>
        </LinearLayout>

        <include
            android:id="@+id/include111"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/RelativeLayout111"
            layout="@layout/model_diver_ver_whitebg" />

        <RelativeLayout
            android:id="@+id/RelativeLayout111"
            android:layout_width="100dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_listitem_answerhelp_title_help"
                style="@style/mainmenu_textLargeName"
                android:layout_below="@+id/iv_activity_terminal_refresh"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="@string/mainmene_aboutus" />

            <ImageView
                android:id="@+id/iv_activity_terminal_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:src="@drawable/aboutus" />

        </RelativeLayout>
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/model_diver_hor_whitebg" />

</LinearLayout>
