<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:id="@+id/rl_activity_about_product_instruct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aboutus_rlHeight"
        android:background="@drawable/listitem_selector" >

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aboutus_textMarginLeft"
            android:text="@string/aboutus_bailinghelp"
            style= "@style/grayTextView"/>

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aboutus_textMarginRight"
            android:src="@drawable/detail" />
    </RelativeLayout>

   

    

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         style="@style/horDiver_withMarginStyle"
        layout="@layout/model_diver_hor_whitebg" />


<RelativeLayout
        android:id="@+id/rl_activity_about_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aboutus_rlHeight"
        android:visibility="gone"
        android:background="@drawable/listitem_selector" >

        <TextView
            android:id="@+id/tv_listitem_alart_bottom_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style= "@style/grayTextView"
            android:layout_marginLeft="@dimen/aboutus_textMarginLeft"
            android:text="@string/aboutus_update" />

        <TextView
            android:id="@+id/iv_listitem_alart_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aboutus_textMarginRight"
            android:textColor="@color/gray99_color"
            android:textSize="@dimen/aboutus_textsize"
            android:text="YB1.0.9"
             />

        <TextView
            android:id="@+id/tv_activity_about_hasupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_listitem_alart_bottom_describe"
            android:background="@drawable/red_round_normal"
            android:textColor="@color/whiteColor"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="New" />

    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         style="@style/horDiver_withMarginStyle"
         android:visibility="gone"
        layout="@layout/model_diver_hor_whitebg" />

    <RelativeLayout
        android:id="@+id/rl_activity_about_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aboutus_rlHeight"
        android:background="@drawable/listitem_selector" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aboutus_textMarginLeft"
            android:text="@string/aboutus_public"
           style= "@style/grayTextView" />

        <ImageView
            android:id="@+id/iv_listitem_alart_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aboutus_textMarginRight"
            android:src="@drawable/detail" />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         style="@style/horDiver_withMarginStyle"
        layout="@layout/model_diver_hor_whitebg" />

        <RelativeLayout
        android:id="@+id/rl_activity_about_suggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aboutus_rlHeight"
        android:background="@drawable/listitem_selector" >

        <TextView
            android:id="@+id/tv_listitem_alart_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aboutus_textMarginLeft"
            android:text="@string/aboutus_suggestion"
           style= "@style/grayTextView" />

        <ImageView
            android:id="@+id/iv_listitem_alart_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aboutus_textMarginRight"
            android:src="@drawable/detail" />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         style="@style/horDiver_withMarginStyle"
        layout="@layout/model_diver_hor_whitebg" />

</LinearLayout>
