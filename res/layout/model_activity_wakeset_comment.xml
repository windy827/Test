<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    

    <RelativeLayout
        android:id="@+id/rl_activity_awakeset_awakename"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_listitem_terminal_baterryinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
             style="@style/grayTextView_larger"
            android:text="@string/awakeset_awake_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dip"
                android:layout_below="@+id/tv_listitem_terminal_baterryinfo"
                android:layout_marginLeft="30dp"
                android:orientation="vertical" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_gridview_activity_deviceselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         style="@style/grayTextView"
                        android:text="@string/awakeset_awake_tell1" />
                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_gridview_activity_deviceselect"
                        android:layout_marginRight="10dip"
                        style="@style/grayTextView"
                        android:textColor="@color/redColor"
                        android:text="@string/awakeset_awake_saycontents" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dip"
                    android:layout_weight="1" >

                    <RadioGroup
                        android:id="@+id/rg_activity_awake_awakename"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

					<RadioButton
					    android:id="@+id/rb_activity_wakeset_name5"
					    style="@style/radiobutton_Style"
					    
					    android:layout_weight="1"
					    android:checked="true"
					   
					    android:text="@string/awakeset_awake_name5"
					    android:textColor="@color/radio_selector" />

                        <RadioButton
                            android:id="@+id/rb_activity_wakeset_name2"
                            style="@style/radiobutton_Style"
                            android:layout_weight="1"
                            android:text="@string/awakeset_awake_name2"
                            android:textColor="@color/radio_selector" />

                        <RadioButton
                            android:id="@+id/rb_activity_wakeset_name1"
                            style="@style/radiobutton_Style"
                            android:layout_weight="1"
                            android:text="@string/awakeset_awake_name1"
                            android:textColor="@color/radio_selector" />

                        <RadioButton
                            android:id="@+id/rb_activity_wakeset_name6"
                            style="@style/radiobutton_Style"
                            android:layout_weight="1"
                            android:text="@string/awakeset_awake_name6"
                            android:textColor="@color/radio_selector" />

                        <RadioButton
                            android:id="@+id/rb_activity_wakeset_name4"
                            style="@style/radiobutton_Style"
                            android:layout_weight="1"
                            android:text="@string/awakeset_awake_name4"
                            android:textColor="@color/radio_selector" />

                        <RadioButton
                            android:id="@+id/rb_activity_wakeset_name3"
                            style="@style/radiobutton_Style"
                            android:layout_weight="1"
                            android:text="@string/awakeset_awake_name3"
                            android:textColor="@color/radio_selector" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundhibailing"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                           android:layout_margin="2dip"
                            android:layout_weight="1"
                            android:background="@drawable/listen_selector" />
                        

                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundhixiaobo1"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="2dip"
                            android:background="@drawable/listen_selector" />
                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundhiyunbao1"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:layout_weight="1"
                            android:background="@drawable/listen_selector" />

                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundbailing"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:layout_weight="1"
                            android:background="@drawable/listen_selector" />
                        

                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundxiaobo1"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="2dip"
                            android:background="@drawable/listen_selector" />
                        <ImageView
                            android:id="@+id/iv_activity_wakeup_soundyunbao1"
                            android:layout_width="35dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="2dip"
                            android:background="@drawable/listen_selector" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>