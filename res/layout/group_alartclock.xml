<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setmodel_ll_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/group_alartclock_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="53dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/group_alartclock_iv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/group_alartclock_tv_name"
                android:layout_marginRight="10dp"
                android:background="@drawable/notexpand" />

            <ImageView
                android:id="@+id/group_alartclock_iv_add"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/group_alartclock_iv_expand"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/group_alartclock_tv_name"
                android:layout_toLeftOf="@+id/group_alartclock_iv_expand"
                android:background="@drawable/clock_add_bg" />

        </RelativeLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/model_ahead_and_playtime" />

    </LinearLayout>

</LinearLayout>
