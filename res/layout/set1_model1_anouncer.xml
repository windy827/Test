<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_alarmclock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setmodelback"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_press_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anouncerset" 
             android:textColor="#ff000000"
               android:layout_marginLeft="5dp"
                 android:layout_marginTop="5dp"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/group_alartclock_bt_add"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/diver" />
<ImageView
            android:id="@+id/iv_listitem_alart_skip"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/diver" />
        <RelativeLayout
            android:id="@+id/rl_timeset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:background="@drawable/listitem_selector"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" 
             android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/anouncer"
                android:textColor="#ff000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_anoucer_setmodel_anouncer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv1"
                android:background="@drawable/bt_shaixuan"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
