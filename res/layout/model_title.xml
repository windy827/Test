<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/model_titleAndbottom_Height"
       android:focusable="false"
        android:background="@color/title_bg" >

        <TextView
            android:id="@+id/model_title_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                       
           android:layout_centerInParent="true"         
            android:textSize="@dimen/model_title_textSize"
             android:ellipsize="end"          
    		 android:singleLine="true"
    		 android:layout_toRightOf="@+id/model_title_iv_back1"
    		 android:layout_toLeftOf="@+id/tv_model_title_save"
    		 android:layout_marginLeft="5dp"
    		  android:layout_marginRight="5dp"
            android:textColor="@color/whitetext_selector"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_unconfig1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
          android:layout_centerVertical="true"
          android:textSize="18sp"
          android:textColor="@color/textColor"
           android:visibility="invisible"
            android:layout_toRightOf="@+id/model_title_iv_back1"
            
            android:text="生词本" />

        <TextView
            android:id="@+id/tv_model_title_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:textSize="@dimen/model_title_save_textSize"
            android:textColor="@color/whitetext_selector"
            android:text="保存" />
          <ImageView
            android:id="@+id/iv_model_title_save"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/finddevice_selector"
            />

        <ImageView
            android:id="@+id/model_title_iv_back1"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/back_selector" />
        
        <ImageView
            android:id="@+id/model_title_iv_menu"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:visibility="gone"
            android:src="@drawable/sidemenubutton_selector" />

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/diver" />

    </RelativeLayout>

</LinearLayout>
