<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_item_terminal_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:minHeight="100dip" >

        <TextView
            android:id="@+id/tv_item_terminal_child_devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textColor="@color/gray99_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_item_terminal_child_isexpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_item_terminal_child_devicename"
            android:layout_marginRight="14dp"
            android:background="@drawable/isexpand" />

        <LinearLayout
            android:id="@+id/ll_item_terminal_child_expand1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
        
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
           
            android:layout_below="@+id/tv_item_terminal_child_devicename"
            android:gravity="center"
           
            android:padding="2dp"
            android:visibility="visible" >

            <Button
                android:id="@+id/bt_item_terminal_child_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="@color/whiteColor"
                android:background="@drawable/blue_round_selector"
                android:text="@string/terminal_Device_info"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_item_terminal_child_change"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                 android:textColor="@color/whiteColor"
                android:background="@drawable/blue_round_selector"
                android:text="@string/terminal_Device_change"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_item_terminal_child_move"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                 android:textColor="@color/whiteColor"
                android:background="@drawable/blue_round_selector"
                android:text="@string/terminal_Device_moveto"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_item_terminal_child_sound"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_margin="5dp"
                android:layout_marginRight="10dp"
                 android:textColor="@color/whiteColor"
                android:background="@drawable/btn_sound_selector" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_terminal_child_devicemac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_terminal_child_devicename"
            android:layout_alignBottom="@+id/tv_item_terminal_child_devicename"
            android:layout_toRightOf="@+id/tv_item_terminal_child_devicename"
            android:textColor="@color/gray33_color"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:text="TextView" />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       
        layout="@layout/model_diver_hor_whitebg" />

</LinearLayout>
