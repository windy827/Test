      android:layout_height="@dimen/rl_height_small" >

      <TextView
          android:id="@+id/tv_sleep_model_activity_awakealart_comment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="23dp"
          android:text="重复播报"
          style="@style/grayTextView" />

      <RadioGroup
          android:id="@+id/rg_activity_awakeset_comment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/tv_sleep_model_activity_awakealart_comment"
          android:layout_alignParentRight="true"
          android:orientation="horizontal" >

          <RadioButton
              android:id="@+id/cb_activity_awakeset_comment1"
              style="@style/radiobutton_Style"
              android:layout_width="match_parent"
              android:layout_weight="0.9"
            
              android:text="不播报" />

          <RadioButton
              android:id="@+id/cb_activity_awakeset_comment2"
              style="@style/radiobutton_Style"
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:text="1次" />

          <RadioButton
              android:id="@+id/cb_activity_awakeset_comment3"
              style="@style/radiobutton_Style"
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:checked="true"
              android:text="2次" />

      </RadioGroup>
  </RelativeLayout>

