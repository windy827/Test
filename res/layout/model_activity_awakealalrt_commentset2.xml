<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <ImageView
            android:id="@+id/iv_listitem_activity_webmusicfirst_info"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:background="@drawable/set" />

        <TextView
            android:id="@+id/tv_alart_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_listitem_activity_webmusicfirst_info"
             style="@style/grayTextView_larger"
            android:text="更多播报设置" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height_small" >

        <TextView
            android:id="@+id/tv_sleep_model_activity_awakealart_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            style="@style/grayTextView"
            android:text="时间日期" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_sleep_model_activity_awakealart_comment"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_sleep_model_activity_awakealart_comment"
             style="@style/grayTextView_Selector"
             android:visibility="invisible"
            android:text="样例" />
        
        <com.tts168.autoset.view.WiperSwitch
                android:id="@+id/switch_activity_awawke_comment1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/Switch_marginTop"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
               
                 />

    </RelativeLayout>
 <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         style="@style/horDiver_withMarginStyle"
        layout="@layout/model_diver_hor_whitebg" />
 
