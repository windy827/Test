<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wholebackground"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/model_title" />

    <ImageView
        android:id="@+id/iv_gridview_activity_deviceselect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:layout_weight="0.7"
        android:background="@drawable/wifinotconnect" />

    <TextView
        android:id="@+id/tv_listitem_activity_webmusicfirst_time"
        style="@style/grayTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:text="请确认手机连入家庭路由器的WIFI网络" />

    <Button
        android:id="@+id/bt_activity_netunable"
        style="@style/buttonOfBottom"
    
        android:text="下一步" />

</LinearLayout>
