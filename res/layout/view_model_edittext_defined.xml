<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.tools.sortlistview.ClearEditText
        android:id="@+id/et_view_model_edittext_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:minHeight="40dip"
        android:background="@drawable/translate"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/suggest_content_hint"
        android:textColorHint="@color/gray33_color"
        android:textSize="@dimen/textSize_bigger"
        android:textColor="@color/gray99_color" />


    <TextView
        android:id="@+id/tv_view_model_wordtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/et_view_model_edittext_content"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:text="0/50"
        android:textColor="@color/gray66_color" />

</RelativeLayout>