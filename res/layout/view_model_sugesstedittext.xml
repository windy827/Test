<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.tools.sortlistview.ClearEditText
        android:id="@+id/et_view_model_edittext_content"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/gray33_color"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/suggest_content_hint"
        android:minHeight="40dip"
        android:textColor="@color/gray99_color" />

       

    <TextView
        android:id="@+id/tv_view_model_wordtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_view_model_edittext_content"
        android:layout_below="@+id/et_view_model_edittext_content"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:text="0/50"
        android:textColor="@color/gray66_color" />

</LinearLayout>