<com.agimind.widget.SlideHolder xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slideHolder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SysSetActivity" >

    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:background="@color/setColor"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/model_login" />

            <ListView
                
                android:id="@+id/lv_devices_activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                style="@style/CommenListViewStyle"
      
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    layout="@layout/model_goto_fsk" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    layout="@layout/model_more" />

            </LinearLayout>

 </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/weibo" />

        </RelativeLayout>

    </RelativeLayout>

</com.agimind.widget.SlideHolder>