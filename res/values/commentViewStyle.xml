<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
 <!-- 放置在低端的Button 的的模板 -->
   <style name="buttonOfBottom" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rlHeight_normal</item>
        <item name="android:textSize">20sp </item>
        <item name="android:textColor">@color/whiteColor</item> 
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item> 
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:background">@drawable/blue_round_selector</item>
    </style>      
    
   
      <style name="whiteButton" >
        <item name="android:layout_width">@dimen/bt_large_width</item>
        <item name="android:layout_height">@dimen/rlHeight_normal</item>
        <item name="android:textSize">20sp </item>
        <item name="android:textColor">@color/gray99_color</item> 
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item> 
      
        <item name="android:background">@drawable/white_round_selector</item>
    </style>      
    
    <!-- TextView的模板 -->
   <style name="blackTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp </item>
        <item name="android:textColor">@color/textColor</item> 
    </style>     
     <style name="grayTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp </item>
        <item name="android:textColor">@color/gray99_color</item> 
    </style>   
       <style name="grayTextView_Selector" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp </item>
        <item name="android:textColor">@color/radio_selector</item> 
    </style>  
      <style name="grayTextView_large" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp </item>
        <item name="android:textColor">@color/gray99_color</item> 
    </style>  
     <style name="grayTextView_larger" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp </item>
        <item name="android:textColor">@color/gray99_color</item> 
    </style>   
    <style name="grayTextView_largest" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp </item>
        <item name="android:textColor">@color/gray99_color</item> 
    </style>
     <style name="grayTextView_larger_Selector" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
       
        <item name="android:textSize">20sp </item>
        <item name="android:textColor">@color/radio_selector</item> 
    </style>  
   
    
</resources>
